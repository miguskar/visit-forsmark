<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEF6FF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/border_background"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/border_background" >

        <!-- Title -->

        <TextView
            android:id="@+id/border_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <!-- Year // Progress -->

        <TextView
            android:id="@+id/border_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border_title"
            android:layout_centerHorizontal="true"
            android:text="Year/Status"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- Back button top -->

        <Button
            android:id="@+id/button_back_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Button" />

        <!-- Forward button top -->

        <Button
            android:id="@+id/button_forward_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Button" />

        <!-- Hint button top -->

        <Button
            android:id="@+id/button_hint_top"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/border_title"
            android:layout_marginLeft="5dp"
            android:text="\?" />
    </RelativeLayout>

    <!--
         Scrollview to contain activity content and bottom buttons
    	(Scrollview can host only one direct child)
    -->

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" >

        <!--
             Container for all content
        	(Scrollview can host only one direct child)
        	
        -->

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Container for activity content -->

            <RelativeLayout
                android:id="@+id/activity_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </RelativeLayout>

            <!-- Container for bottom buttons -->

            <RelativeLayout
                android:id="@+id/border_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#000000"
                android:gravity="bottom" >

                <!-- Back button bottom -->

                <Button
                    android:id="@+id/button_back_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Button"
                    android:visibility="visible" />

                <!-- Cancel button bottom -->

                <Button
                    android:id="@+id/button_cancel_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Button"
                    android:visibility="gone" />

                <!-- Forward button bottom -->

                <Button
                    android:id="@+id/button_forward_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="Button"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>