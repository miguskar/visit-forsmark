<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <include
        android:id="@+id/include1"
        layout="@layout/border" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include1"
        android:gravity="center"
        android:text="@string/HowManySeats"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_below="@+id/textView1" >

        <Button
            android:id="@+id/decAtt"
            style="@style/decreaceButtonStyle" />

        <EditText
            android:id="@+id/numAtt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="1" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/incAtt"
            style="@style/increaseButtonStyle"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/attDialogBack"
            style="@style/button"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:onClick="cancelButton"
            android:text="@string/Cancel" />

        <Button
            android:id="@+id/attDialogNext"
            style="@style/button"            
            android:layout_marginLeft="10dp"
            android:text="@string/Next"
            android:onClick="nextButton" 
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</RelativeLayout>