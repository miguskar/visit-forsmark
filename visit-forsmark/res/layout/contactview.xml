<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <include
        android:id="@+id/border"
        layout="@layout/border" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/FirstName" />

            <EditText
                android:id="@+id/editTextPname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|textCapWords" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView2"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LastName" />

            <EditText
                android:id="@+id/editTextLName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|textCapWords" >
            </EditText>

            <TextView
                android:id="@+id/textView3"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SocialSecurity" />

            <EditText
                android:id="@+id/editTextPnmbr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioButtonMan"
                    style="@style/RadioButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/Male" />

                <RadioButton
                    android:id="@+id/radioButtonWoman"
                    style="@style/RadioButtonFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="@string/Female" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Address" />

            <EditText
                android:id="@+id/editTextAdress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/textView5"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ContactZip" />

            <EditText
                android:id="@+id/editTextPostNmbr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView6"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ContactPostalAddress" />

            <EditText
                android:id="@+id/editTextPostAdress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/textView7"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ContactCountry" />

            <EditText
                android:id="@+id/editTextCountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName|textCapWords" />

            <TextView
                android:id="@+id/textViewCell"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ContactMobile" />

            <EditText
                android:id="@+id/editTextCell"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewEmail"
                style="@style/CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ContactEmail" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress" />
            
            <!-- NO SFR ______________________________________________________ -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
            	>
            
            <CheckBox
                android:id="@+id/contactcheckboxSFR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RadioButtonFont"
                android:text="@string/NoSFR" />

            <Button
                android:id="@+id/contact_button_hint_SFR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/contactcheckboxSFR"
                android:background="@drawable/hint"
                android:visibility="visible" />
            
            </RelativeLayout>
            <!-- ______________________________________________________________ -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/bottomCancelButton"
                    style="@style/bottomCancelButton"
                    android:text="@string/Cancel" />

                <Button
                    android:id="@+id/bottomNextButton"
                    style="@style/bottomNextButton"
                    android:text="@string/Next" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>