<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

   
  <!--  MONTH VIEW -->
    
    <style name="dateCellStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.125</item>
        <item name="android:background">@drawable/cell_button</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onDateClick</item>
    </style>

    <style name="restCellStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.125</item>
        <item name="android:gravity">center</item> 
    </style>
    
     <!--  FOOTER BUTTONS-->

    <style name="bottomBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@drawable/""</item> -->
        <item name="android:gravity">bottom</item>
        <item name="android:layout_toLeftOf">@id/bottomCancelButton</item>
        <item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginRight">5dp</item> 
        <item name="android:onClick">bottomBackClick</item>
    </style>
    
    <style name="bottomCancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@drawable/""</item> -->
        <item name="android:gravity">bottom</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:onClick">bottomCancelClick</item>
    </style>
  
    <style name="bottomNextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@drawable/""</item> -->
        <item name="android:gravity">bottom</item>
        <item name="android:layout_toRightOf">@id/bottomCancelButton</item>
        <item name="android:layout_centerVertical">true</item>
		<item name="android:layout_marginLeft">5dp</item> 
        <item name="android:onClick">bottomNextClick</item>
    </style>

</resources>