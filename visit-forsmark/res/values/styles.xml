<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BORDER BACK/NEXT BUTTONS -->
    <style name="backTopButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/border_top_back_button</item>
        <item name="android:onClick">topBackButton</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="nextTopButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/border_top_next_button</item>
        <item name="android:onClick">topNextButton</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <!-- DIALOG DECREASE/INCREASE BUTTON-->
    <style name="decreaceButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/dialog_decrease_button</item>
        <item name="android:onClick">decreaseAtt</item>
    </style>
    
    <style name="increaseButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/dialog_increase_button</item>
        <item name="android:onClick">increaseAtt</item>
    </style>

    <!-- EDIT BUTTON -->
    <style name="editButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/editbutton</item>
        <item name="android:onClick">editButton</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">left</item>
        <item name="android:drawableRight">@drawable/ico_edit</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
      <!-- ADD ATTENDANT BUTTON -->
    <style name="addAttendantButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/editbutton</item>
        <item name="android:onClick">addAttendantButton</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/iconaddcontact</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <!-- TERMS TEXTVIEW -->
    <style name="termTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <!-- CONTACT_INFO TEXTVIEW -->
    <style name="contactInfoTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    
    <!-- CONTACT_INFO TEXTVIEW -->
    <style name="contactInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    
    <!-- TERMS IMAGEDOT -->
    <style name="termImageDot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/term_dot</item>
    </style>
    
    <!-- MONTH VIEW -->
    <style name="dateCellStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.125</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:background">@drawable/cell_empty</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">onDateClick</item>
    </style>

    <style name="restCellStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.125</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- FOOTER BUTTONS -->

    <style name="bottomBackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:layout_toLeftOf">@id/bottomCancelButton</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:onClick">bottomBackClick</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="bottomCancelButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@drawable/""</item> -->
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:onClick">bottomCancelClick</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/cancel_button</item>   
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        
    </style>

    <style name="bottomNextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@drawable/""</item> -->
        <item name="android:layout_toRightOf">@id/bottomCancelButton</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:onClick">bottomNextClick</item>       
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:background">@drawable/cancel_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
	
    <style name="textViewMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#135aa5</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>